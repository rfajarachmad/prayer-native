<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <PreferenceCategory android:title="On prayer">
        <CheckBoxPreference 
            android:key="prefOnPrayAlarm"
            android:title="Alarm"
            android:defaultValue="true"/>
    	
        <ListPreference 
            android:key="prefSoundOnPray"
            android:title="Sound"
            android:summary="%s"
            android:defaultValue="azan1"
            android:entries="@array/sounds"
            android:entryValues="@array/soundValues"/>
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Before prayer">
        <CheckBoxPreference 
            android:key="prefBeforePrayAlarm"
            android:title="Alarm"
            android:defaultValue="true"/>
    	
        <ListPreference android:key="prefNotifyBefore"
            android:title="Notify before"
            android:summary="%s"
            android:defaultValue="5"
            android:entries="@array/notifyBefore"
            android:entryValues="@array/notifyBeforeValue"/>
        
        <ListPreference 
            android:key="prefSoundBeforePray"
            android:title="Sound"
            android:summary="%s"
            android:defaultValue="azan1"
            android:entries="@array/sounds"
            android:entryValues="@array/soundValues"/>
    </PreferenceCategory>
</PreferenceScreen>