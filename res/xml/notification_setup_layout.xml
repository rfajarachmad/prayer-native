<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <PreferenceCategory android:title="@string/pref_on_prayer">
        <CheckBoxPreference 
            android:key="prefOnPrayAlarm"
            android:title="@string/pref_alarm"
            android:defaultValue="true"/>
    	
        <ListPreference 
            android:key="prefSoundOnPray"
            android:title="@string/pref_sound"
            android:summary="%s"
            android:defaultValue="@string/default_alarm"
            android:entries="@array/sounds"
            android:entryValues="@array/soundValues"/>
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/pref_before_prayer">
        <CheckBoxPreference 
            android:key="prefBeforePrayAlarm"
            android:title="@string/pref_alarm"
            android:defaultValue="true"/>
    	
        <ListPreference android:key="prefNotifyBefore"
            android:title="@string/pref_notify_before"
            android:summary="%s"
            android:defaultValue="@string/default_notify_before"
            android:entries="@array/notifyBefore"
            android:entryValues="@array/notifyBeforeValue"/>
        
        <ListPreference 
            android:key="prefSoundBeforePray"
            android:title="@string/pref_sound"
            android:summary="%s"
            android:defaultValue="@string/default_alarm"
            android:entries="@array/sounds"
            android:entryValues="@array/soundValues"/>
    </PreferenceCategory>
</PreferenceScreen>